<UserControl x:Class="TestDataContextBindings.Views.UserControls.UserControl1"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TestDataContextBindings.Views.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" >
        <Label Content="Page 1" HorizontalAlignment="Center" VerticalAlignment="Top"/>
        <Label x:Name="LbInfo"  Content="Info" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        <Button Content="Check DataContext Now" Click="OnBtnClick" Visibility="{Binding IsBtnVisabled, Converter={StaticResource BoolToVis}}"/>
        <Label Content="{Binding BindingInfo}"/>
    </StackPanel>
</UserControl>
